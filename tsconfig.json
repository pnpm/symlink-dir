{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "target": "es2019",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/cli.ts",
    "src/index.ts",
    "typings/index.d.ts"
  ]
}
